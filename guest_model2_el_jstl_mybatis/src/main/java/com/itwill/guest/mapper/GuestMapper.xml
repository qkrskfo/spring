<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.guest.mapper.GuestMapper">
	<select id="selectByNo" parameterType="int" resultType="com.itwill.guest.Guest">
		select * from guest where guest_no=#{guestNo}
	</select>
	<select id="selectAll" resultType="com.itwill.guest.Guest">
		select * from guest
	</select>
	<!-- 
	<insert id="create" parameterType="com.itwill.guest.Guest">
		insert into guest values(guest_no_seq.nextval, #{guest_name}, sysdate, #{guest_email}, #{guest_homepage}, #{guest_title}, #{guest_content})
	</insert>
	 -->
	<insert id="create" parameterType="com.itwill.guest.Guest">
		<selectKey order="BEFORE" resultType="int" keyProperty="guest_no">
		select guest_no_seq.nextval from dual
		</selectKey>
		insert into guest values(#{guest_no}, #{guest_name}, sysdate, #{guest_email}, #{guest_homepage}, #{guest_title}, #{guest_content})
	</insert>
</mapper>