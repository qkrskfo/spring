<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.shop.user.mapper.UserMapper">
	<insert id="create" parameterType="com.itwill.shop.user.User">
		insert into userinfo(userid,password,name,email) 
		values(#{userId},#{password},#{name},#{email})
	</insert>
	<select id="findUser" parameterType="java.lang.String" resultType="com.itwill.shop.user.User">
		select userid,password,name,email from userinfo where userid=#{userId}
	</select>
</mapper>